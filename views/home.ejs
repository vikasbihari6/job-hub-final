<!-- resume section -->
<div style="padding-top: 90px; padding-bottom: 120px; background-image: url(/images/cv.svg); background-repeat: no-repeat; background-position: center top;" class="online-cv section-overly pt-90 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="cv-caption text-center">
                    <p class="pera2"> Make a Difference with Your Online Resume!</p>
                    <a href="/users/<%= currentUser._id %>/edit" class="home-text text-decoration-none border-btn2 border-btn4">Upload your cv</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- recent jobs -->
<div class="latest-job-box latest-job py-5">
    <div style="margin-top: 45px; margin-bottom: 60px;" class="container bg-light p-4 rounded-3">
        <div class="container">
            <h3 class="fw-bold text-uppercase">Latest Jobs</h3>
            <% recentJobs.forEach(function(job){ %>
            <hr>
            <div class="card bg-light mb-3">
                <div class="row g-0">
                    <div class="col-md-3 d-flex align-items-center">
                        <img style="width: 30%; height: auto;" src="<%= job.logo %>" class="img-fluid rounded-start my-auto p-3" alt="...">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= job.name %>
                            </h4>
                            <p class="card-text"><small class="text-muted">
                                    <i class="me-1 fas fa-map-marker-alt"></i> <%= job.location %>
                                    <i class="ms-3 me-1 far fa-clock"></i> <%= job.time %>
                                    <i class="ms-3 me-1 far fa-money-bill-alt"></i>
                                    <%= job.stipend %>
                                    <i class="ms-3 me-1 fas fa-hourglass-half"></i> <%= job.deadline.toDateString() %>
                                </small></p>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex align-items-center justify-content-center">
                        <a href="/jobs/<%= job._id %>" class="btn btn-outline-danger">Apply Now</a>
                    </div>
                </div>
            </div>
            <% }); %>
            <div class="d-flex justify-content-end"><a href="/jobs" class="btn btn-danger">View All Jobs</button></a>
            </div>
        </div>
    </div>
</div>
