<!-- Work Section Start  -->
<div style="padding-top: 45px; padding-bottom: 60px;" class="mt-5 mb-5 work-section section pb-100 pb-lg-80 pb-md-60 pb-sm-40 pb-xs-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-wrap mb-45 mb-sm-30 mb-xs-20">
