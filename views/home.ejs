<%- include('partials/header'); -%>
<div class="banner" style="background-image: url(/images/home-banner.jpg);">
    <div class="container">
        <% if((error && error.length > 0) || (success && success.length > 0)){ %>
            <div class="pt-3" >
                <div class="container">

                    <% if(error && error.length > 0){ %>
                        <div class=" mt-0 mb-0 alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <% if(success && success.length > 0){ %>
                        <div class=" mt-0 mb-0 alert alert-success alert-dismissible fade show" role="alert">
                            <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                </div>
            </div>
        <% } %>
        <div class="row">
            <div class="col-lg-6">
                <div class="index-content">
                    <h1 class="fw-bold">We'll help you find your <span>desired job</span></h1>
                    <p class="fs-4 lead">Find Jobs, Employment & Career Opportunities</p>
                    <br>
                    <div class="job-search-field">
                        <div class="job-search-item">
                            <form action="/jobs" method="GET" class="form row">
                                <div class="col-lg-4">
                                    <div class="form-group mb-3">
                                        <div class="d-flex">
                                            <label class="form-label">What</label>
                                            <span class="ms-auto">e.g. job, company</span>
                                        </div>
                                        <div class="position-relative left-icon">
                                            <input type="text" class="form-control" name="search" placeholder="Job title, or company">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-12">
                                    <div class="form-group form-action mb-3">
                                        <button type="submit" class="btn btn-danger btn-lg"><i class="fas fa-search"></i> Find Jobs</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- <img src="https://templates.hibootstrap.com/jecto/default/assets/img/home-two/banner-main.png" alt="">
                <img style="z-index: 1;left: 10px;top: 215px;" src="https://templates.hibootstrap.com/jecto/default/assets/img/home-two/banner1.png" alt=""> -->
            </div>
        </div>
