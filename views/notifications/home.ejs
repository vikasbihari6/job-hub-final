<%- include('../partials/notificationHeader'); -%>
<div class="show-page">
    <div style="padding-top: 100px; padding-bottom: 150px; background-image: url(/images/notifications.svg); background-repeat: no-repeat; background-position: 50% 25%;" class="online-cv section-overly pt-90 pb-120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="cv-caption text-center">
                        <p class="pera2 mt-5"> Notifications</p>
                        <a href="/notifications/index" class="home-text text-decoration-none border-btn2 border-btn4">Visit the Archive</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="card">
            <div class="row g-0">
                <div class="col-lg-1 d-flex align-items-center">
                    <img style="width: 100%; height: auto;" src="/images/notif-logo.png" class="img-fluid rounded-start my-auto p-3" alt="...">
                </div>
                <div class="col-lg-8 d-flex align-items-center">
                    <h4 class="">
                        View all latest
                        <span id="color-red">notifications</span>
                    </h4>
                </div>
                <div class="col-lg-3 d-flex align-items-center justify-content-center">
	                <% if(currentUser && currentUser.admin){ %>
						<a href="/notifications/new" class="btn btn-outline-danger me-2">Push a New Notification</a>
					<% } %>
	            </div>
            </div>
        </div>
    </div>
    <!-- recent notifs -->
    <div class=" py-5">
        <div class="container rounded-3">
            <div class="container">
                <% recentNotifications.forEach(function(notification){ %>
                <hr>
                <div class="card bg-light mb-3">
                    <div class="row g-0">
                        <div class="col-md-3 d-flex align-items-center">
                            <img style="width: 30%; height: auto;" src="/images/notif-show.png" class="img-fluid rounded-start my-auto p-3" alt="...">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">
                                	<% if(notification.description.length <= 100){ %>
                                		<%= notification.description %>
                                	<% } else { %>
                                	<%- notification.description.substring(0,100) %> ...
                                	<% } %>
                                </h5>
                                <p class="card-text"><small class="text-muted">
                                        posted by: <%= notification.author %>, <%= moment(notification.createdAt).fromNow() %>
                                    </small></p>
                            </div>
                        </div>
                        <div class="col-md-3 d-flex align-items-center justify-content-center">
                            <button class="btn btn-outline-danger" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="<%= notification.description %>">Read More</button>
                            <form action="/notifications/<%=notification._id%>?_method=DELETE" method="POST">
							    <button class="ms-3 btn btn-danger" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="<%= notification.description %>"><i class="fas fa-times"></i></button>
							</form>
                        </div>
                    </div>
                </div>
                <% }); %>
                <div class="d-flex justify-content-end"><a href="/notifications/index" class="btn btn-danger">View All Notifications</button></a>
                </div>
            </div>
        </div>
    </div>
</div>
